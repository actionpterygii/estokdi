---
import teams from '../json/teams.json';
---

<ul>
	{
		teams.map((team) => (
			<li>
				<div class="team_logo">
					<img src={'/img/team/' + team.id + '.png'} alt={team.id}>
				</div>
				<p class="team_name">{team.name}</p>
				<p class="team_buby">{team.ruby}</p>
				<p class="team_tag">{team.tag}</p>
				<div class="team_links">
					{team.links.map((link) => (
						link.urls.map((url) => (
							<a href={url}><img src={'/img/link/' + link.name + '.png'} alt={link.name}></a>
						))
					))}
				</div>
				<div class="team_divisions">
					{team.divisions.map((division) => (
						<>
							{division.urls.map((url) => (
								<a href={url}><img src={'/img/division/' + division.name + '.png'} alt={division.name}></a>
							))}
							{division.liquipedia ? <a class="liquipedia" href={division.liquipedia}><img src="/img/division/liquipedia.png" alt="liquipedia"></a> : ''}
						</>
					))}
				</div>
			</li>
		))
	}
</ul>

