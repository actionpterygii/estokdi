---
interface Props {
	title: string;
}

const { title } = Astro.props;
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const descrption = 'eスポーツチームの一覧です。Apex Legends, VALORANT, STREET FIGHTER, League of Legends などのゲームタイトルのチームを持っている日本の著名eスポーツチームの参加ゲームタイトルと、Webサイト,ショップ,liquipedia,SNSなどのリンクがまとめられています。';
const home_url = 'https://estl.actionpterygii.com';
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name='description' content={descrption}>
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:creator" content="@actionpterygii">
		<meta property="og:title" content={title}>
		<meta property="og:description" content={descrption}>
		<meta property="og:url" content={home_url}>
		<meta property='og:image' content={home_url + '/og.png'}>
		<link rel="icon" sizes="16x16" href="./favicon.ico" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@100..900&family=Noto+Serif+JP&family=Platypi:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
		<title>{title}</title>
		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-BXY5JHZVCM"></script>
		<script type="application/ld+json">
			{
			  "@context" : "https://schema.org",
			  "@type" : "WebSite",
			  "name" : "eスポーツチーム一覧",
			  "url" : "https://estl.actionpterygii.com"
			}
		  </script>
	</head>
	<body>
		<Header></Header>
		<slot />
		<Footer></Footer>
	</body>
</html>
<style is:global>
	:root {
		--text: #000;
		--text_link: #004cff;
	}
	body,
	header,main,footer,
	div,h1,h2,p,
	a,a:visited,
	img,
	ul,li
	{
		box-sizing: border-box;
		padding: 0;
		outline: 0;
		border: 0;
		margin: 0;
		color: var(--text);
		font-size: 12px;
		font-family: sans-serif;
		word-break: break-all;
	}
	body {
		overflow-y: scroll;
	}
</style>
